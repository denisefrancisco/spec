<!DOCTYPE html> 
<html> 
	<head> 
	<title>Spec Mobile</title> 
	<meta name="viewport" content="width=device-width, initial-scale=1"> 
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.css" />
	<script src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
	<script src="http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.js"></script>
	<style type="text/css">
        .staffed {
            border-left:        5px solid #0f0;
        }
        .notStaffed {
            border-left:        5px solid #f00;
        }
        .semiStaffed {
            border-left:        5px solid #faa;
        }
        .cancelled {
            border-left:        5px solid #666;
        }

        .ui-bar-w {
            background-color:   #990000; /* this is the color currently in use on cascade web pages */      /* #930c08; */
            color:          #fff;
            text-shadow:        0 1px 0 #000;
        }
        .ui-btn-text {
            color:          #fff;
        }
        .ui-btn {
            text-decoration:    none;
        }

        #slider_container .ui-slider-switch {
            width:          9em;
        }

        #slider_container {
            padding-top:        15px;
        }

        .filler {
            white-space:        nowrap;
        }

        .ui-icon {
            margin-top:     6px;
        }
    </style>
    <script type="text/javascript">
    $.mobile.defaultPageTransition = 'none';
    $.mobile.defaultDialogTransition = 'none';
    $.mobile.useFastClick = true;
    </script>
</head> 
<body> 

<div data-role="page">

	<div data-role="header" data-theme="w">
        <a data-rel="back" data-icon="back" class="back ui-btn-left">Back</a>
		<h1>Event - Spec M</h1>
	</div><!-- /header -->

	<div data-role="content">	
        <div class="ui-bar ui-bar-a">
            <h3>{{=event.title }}</h3>
        </div>
        <p>
        <table>
            <tr>
                <td><b>From</b></td><td><b>{{=formatAMPM(new Date(Date.parse(event.start))) }}</b></td><td>({{=formatAMPM(new Date(Date.parse(event.eventStart))) }})</td>
            </tr>
            <tr>
                <td><b>To</b></td><td><b>{{=formatAMPM(new Date(Date.parse(event.eventEnd))) }}</b></td><td>({{=formatAMPM(new Date(Date.parse(event.eventEnd))) }})</td>
            </tr>
        </table>
        <p><i>{{=event.loc }}</i></p>
        <p>{{=event.desc }}</p>
        <div class="ui-bar ui-bar-a">
            <h3>Staff List</h3>
        </div>
        <ul data-role="listview" data-inset="true">
            {{ event.shifts.forEach(function(shift) { }}
            <li><a>{{=shift.staff }}
                <span class="ui-li-count">
                    {{=formatAMPM(new Date(Date.parse(shift.start))) }} - {{=formatAMPM(new Date(Date.parse(shift.end))) }}
                </span></a></li>
            {{ }); }}
        </ul>
	</div><!-- /content -->
	<div data-role="footer" data-position="fixed">
        <div data-role="navbar">
            <ul>
                
            </ul>
        </div>
    </div>

</div><!-- /page -->

</body>
</html>